@model UFOT.Models.Beneficiario
@{

    Layout = "~/Views/Shared/_LayoutBarra.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>

  /* Estilos adicionales para el formulario */
  form {
    margin-top: 20px;
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 10px;
  }
  label {
    display: block;
    margin-bottom: 10px;
  }
  input[type="text"],
  select {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 5px;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }
  input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  input[type="submit"]:hover {
    background-color: #0056b3;
  }
</style>
</head>
<body>
    <div class="container">
        <h1>Agregar Beneficiarios</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="login-form">
                  
                    <form asp-controller="AgregarBeneficiario" asp-action="Index" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NumeroCuenta" class="control-label"></label>
                            <input asp-for="NumeroCuenta" class="form-control" required />
                            <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                        <label asp-for="BancoId" class="control-label"></label>
                        <select asp-for="BancoId" asp-items="ViewBag.Bancos" class="form-control" required></select>
                        <span asp-validation-for="BancoId" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Registrarse" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-6">
                <img src="https://i.ibb.co/R6w88Nt/corebank-logo.jpg" class="img-fluid">
            </div>
        </div>
    </div>

 </div>

</body>
</html>
