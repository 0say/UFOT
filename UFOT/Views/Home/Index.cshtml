@model UFOT.Models.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Banco UFOT - Bienvenido</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 600px;
      margin: auto;
      padding: 20px;
      width: 100%
    }

    .jumbotron {
      background-color: #007bff;
      color: #fff;
      padding: 18px;
      border-radius: 10px;
      margin-bottom: 30px;
    }

    h1, h2 {
      text-align: center;
    }

    .login-form {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] {
      width: calc(100% - 12px);
      padding: 8px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    input[type="submit"] {
      width: 100%;
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 10px;
      border-radius: 4px;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #0056b3;
    }

    .footer {
      text-align: center;
      margin-top: 20px;
    }

    .text-danger {
      color: red;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Bienvenido al Banco UFOT</h1>
    </div>

    <div class="login-form">
      <h2>Iniciar sesión</h2>       
      <form asp-controller="Home" asp-action="Index" method="post">
        <div class="form-group">
          <label asp-for="Usuario1" class="control-label"></label>
          <input asp-for="Usuario1" class="form-control" required /> 
          <span asp-validation-for="Usuario1" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="Clave" class="control-label"></label>
          <input asp-for="Clave" class="form-control" required /> 
          <span asp-validation-for="Clave" class="text-danger"></span>
        </div> 

        <div class="form-group">
          <a href="@Url.Action("Index", "Registro")">Registrarse</a>
          <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
        </div>
      </form>
    </div>

    <div class="footer">
      <p>&copy; 2024 Banco UFOT. Todos los derechos reservados.</p>
    </div>
  </div>
</body>
</html>
