@{
    Layout = "~/Views/Shared/_LayoutBarra.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Bancario</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .no-data {
            text-align: center;
            color: #777;
        }

        .btn-movimientos {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Número de Cuenta</th>
                    <th>Balance</th>
                    <th>Tipo</th>
                    <th>Moneda</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var cuenta in Model)
                    {
                        <tr>
                            <td>@cuenta.IdCuenta</td>
                            <td>@cuenta.Balance $</td>
                            <td>@cuenta.TipoCuenta</td>
                            <td>@cuenta.Moneda</td>
                            <td><button class="btn-movimientos" onclick="verMovimientos('@cuenta.IdCuenta')">Ver Movimientos</button></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="no-data">No se encontraron cuentas</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        function verMovimientos(idCliente) {
            const data = { idCliente: idCliente };

            fetch('/api/client/movimientos', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('La solicitud no fue exitosa');
                    }
                    return response.text(); // Obtener el cuerpo de la respuesta como texto HTML
                })
                .then(html => {
                    // Insertar el HTML en un div con id "movimientosTable"
                    document.getElementById('movimientosTable').innerHTML = html;
                })
                .catch(error => {
                    console.error('Error al obtener los movimientos:', error);
                });
        }


    </script>
</body>
</html>
