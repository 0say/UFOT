@{
    Layout = "~/Views/Shared/_LayoutBarra.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Bancario</title>
    <style>
        .container {
            padding: 20px;
        }
        .account {
            border: 2px solid #000;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Número de Cuenta</th>
                    <th>Balance</th>
                    <th>Tipo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var cuenta in Model)
                    {
                                <tr>
                                    <td>@cuenta.IdCuenta</td>
                                    <td>@cuenta.Balance</td>
                                    <td>@cuenta.Tipo</td>
                                </tr>
                    }
                }
                else
                {
                        <tr>
                            <td colspan="3">No se encontraron cuentas</td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
