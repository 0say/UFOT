@{
    Layout = "~/Views/Shared/_LayoutBarra.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Bancario</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .no-data {
            text-align: center;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Número de Cuenta</th>
                    <th>Balance</th>
                    <th>Tipo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null  )
                {
                    @foreach (var cuenta in Model)
                    {
                        <tr>
                            <td>@cuenta.IdCuenta</td>
                            <td>@cuenta.Balance</td>$
                            <td>@cuenta.TipoCuenta</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="no-data">No se encontraron cuentas</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
