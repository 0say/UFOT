@{
    Layout = "~/Views/Shared/_LayoutBarra.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Código del encabezado... -->
</head>
<body>
    <div class="container">
        <h1>Pago Prestamo</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="login-form">
                    <form asp-controller="TransferenciasBeneficiarios" asp-action="Index" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label for="cuentaOrigen" class="control-label">Cuenta Origen</label>
                            <select id="cuentaOrigen" name="cuentaOrigen" class="form-control" required>
                                @foreach (var cuenta in ViewBag.Cuentas)
                                {
                                    <option value="@cuenta.IdCuenta">@cuenta.IdCuenta</option>
                                }
                            </select>
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="prestamo" class="control-label">Préstamo Pendiente</label>
                            <select id="prestamo" name="prestamo" class="form-control" required>
                                @foreach (var prestamo in ViewBag.Prestamos)
                                {
                                    <option value="@prestamo.IdPrestamo">@prestamo.IdPrestamo - $@prestamo.Monto</option>
                                }
                            </select>
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="monto" class="control-label">Monto</label>
                            <input type="text" id="monto" name="monto" class="form-control" required>
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Realizar Transferencia" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-6">
                <img src="https://i.ibb.co/R6w88Nt/corebank-logo.jpg" class="img-fluid">
            </div>
        </div>
    </div>
</body>
</html>
